@{ 
    //Variavel de controle
    Boolean logado = false;

    //Cria o obj cookie e recebe o mesmo pelo obj Request

    HttpCookie cookie = Request.Cookies["UserLogin"];

    if (cookie != null)
    {
        logado = true;
    }
}

<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/HTMLCSS/CSS/sidebar.css" />
    <link rel="stylesheet" href="~/HTMLCSS/CSS/main.css" />
    <title>CENAI</title>
</head>
<body div class="bg">
    <div class="sidebar">
        <a class="active" href="~/HTMLCSS/main.cshtml">Pagina Inicial</a>
        <a href="~/HTMLCSS/temps/temp_regII.cshtml">Registro de Usuarios</a>
        <a href="~/HTMLCSS/temps/temp_list.cshtml">Listagem de Usuarios</a>
        <a onclick="LogOff()">Fazer Logoff</a>
    </div>

    <div class="content" id="content">
        @if (logado)
        {
            
            <p>Seu nível de permissão é: @cookie.Value.ToString()</p>
            <br />
            <br />
        }
        else
        {
            <h1> Algo deu ERRADO </h1>
        }
    </div>


    <script src="~/JS/Index.js"></script>
</body>
</html>
