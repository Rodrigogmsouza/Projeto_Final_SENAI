@using Projeto_Final.CSHARP;
@{
    BancoDeDados.DBConnect();
    sala Sala = new sala();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FONTE-->
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet'>
    <!--ICONES-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,300,1,-25" />
    <!--CSS-->
    <link rel="stylesheet" href="~/HTMLCSS/CSS/sidebar.css" />
    <link rel="stylesheet" href="~/HTMLCSS/CSS/registro_sala_setor.css" />

    <title>CENAI</title>
</head>
<body div class="bg">
<section>
    <nav>
        <!--SIDEBAR-->
        <div class="sidenav" onclick="Dropdownbtn()">
            <!--PAGINA INICIAL-->
            <a href="~/HTMLCSS/Main/main.cshtml">
                <span class="material-symbols-outlined">home</span>
                Pagina Inicial
            </a>
            <!--MATRICULA-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">person_add</span>
                Matricula
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--MATRICULA OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLCSS/Registro/matricula.cshtml">Fazer Matricula</a>
                <a href="~/HTMLCSS/Listagem/listagem_matriculas.cshtml">Alunos Matriculados</a>
            </div>
            <!--REGISTRO-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">app_registration</span>
                Registro
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--REGISTRO OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLTEMP/Checagem/check_registro.cshtml">Usuarios</a>
                <a href="~/HTMLCSS/Registro/registro_turma.cshtml">Turmas</a>
                <a class="active"  href="~/HTMLCSS/Registro/registro_sala_setor.cshtml">Salas/Setores</a>
            </div>
            <!--LISTAGEM-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">list_alt</span>
                Listagem
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--LISTAGEM OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLCSS/Listagem/Listagem_Alunos">Usuarios</a>
                <a href="~/HTMLCSS/Listagem/listagem_turma.cshtml">Turmas</a>
                <a href="~/HTMLCSS/Listagem/listagem_sala.cshtml">Salas</a>
                <a href="~/HTMLCSS/Listagem/listagem_setores.cshtml">Setores</a>
            </div>
            <!--PESQUISA-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">search</span>
                Pesquisa
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--PESQUISA OPCOES-->
            <div class="dropdown-container">
                <a href="#">Usuarios</a>
                <a href="#">Turmas</a>
                <a href="#">Salas</a>
            </div>
            <!--PROVAS-->
            <a href="#">
                <span class="material-symbols-outlined">quiz</span>
                Provas
            </a>
            <!--AREA DO USUARIO-->
            <a href="~/HTMLTEMP/Checagem/check_userarea.cshtml">
                <span class="material-symbols-outlined">account_circle</span>
                Área do Usuario
            </a>
            <!--LOGOUT-->
            <a class="logoff" onclick="LogOff()">
                <span class="material-symbols-outlined">logout</span>
                Fazer Logoff
            </a>
        </div>
    </nav>
        <main>
            <div class="content">
                <CENTER>
                    <form method="post" action="~/HTMLCSS/Registro/registrando/registrando_sala.cshtml">
                        <div class="sala-container">
                            <div class="registro-sala">
                                <h6>REGISTRO DE SALA!</h6>
                                <!--NOME-->
                                <input type="text" name="salaid" id="salaid" class="campo_sala"
                                       placeholder="Numero da sala" maxlength="3" required /><br />


                                <!--ENVIAR-->
                                <input type="submit" placeholder="REGISTRAR" /><br />

                            </div>
                        </div>
                    </form>
                    <form method="post" action="~/HTMLCSS/Registro/registrando/registrando_setor.cshtml">
                        <div class="setor-container">
                            <div class="registro-setor">
                                <h6>REGISTRO DE SETOR!</h6>
                                <!--NOME-->
                                <input type="text" name="setorid" id="setorid" class="campo_setor"
                                       placeholder="Setor" maxlength="20" required /><br />


                                <!--ENVIAR-->
                                <input type="submit" placeholder="REGISTRAR" /><br />

                            </div>
                        </div>
                    </form>
                </CENTER>
            </div>
        </main>
    </section>
    <script src="~/JS/Index.js"></script>
</body>
</html>
