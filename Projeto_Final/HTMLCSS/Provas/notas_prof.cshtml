@using Projeto_Final.CSHARP;
@{
    BancoDeDados.DBConnect();
    matricula Matricula = new matricula();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FONTE-->
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet'>
    <!--ICONES-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,300,1,-25" />
    <!--CSS-->
    <link rel="stylesheet" href="~/HTMLCSS/CSS/sidebar.css" />
    <link rel="stylesheet" href="~/HTMLCSS/CSS/registro.css" />

    <title>CENAI</title>
</head>
<body div class="bg">
<section>
    <nav>
        <!--SIDEBAR-->
        <div class="sidenav" onclick="Dropdownbtn()">
            <!--PAGINA INICIAL-->
            <a href="~/HTMLCSS/main.cshtml">
                <span class="material-symbols-outlined">home</span>
                Pagina Inicial
            </a>
            <!--MATRICULA-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">person_add</span>
                Matricula
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--MATRICULA OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLCSS/Registro/matricula.cshtml">Fazer Matricula</a>
                <a href="~/HTMLCSS/Listagem/Lista_alunos/aluno_turma.cshtml">Alunos Matriculados</a>
            </div>
            <!--REGISTRO-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">app_registration</span>
                Registro
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--REGISTRO OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLTEMP/Checagem/check_registro.cshtml">Usuarios</a>
                <a href="~/HTMLCSS/Registro/registro_turma.cshtml">Turmas</a>
                <a href="~/HTMLCSS/Registro/registro_sala.cshtml">Salas</a>
                <a href="~/HTMLCSS/Registro/registro_setores.cshtml">Setores</a>
            </div>
            <!--LISTAGEM-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">list_alt</span>
                Listagem
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--LISTAGEM OPCOES-->
            <div class="dropdown-container">
                <a href="~/HTMLTEMP/Checagem/check_listagem.cshtml">Usuarios</a>
                <a href="~/HTMLCSS/Listagem/listagem_turma.cshtml">Turmas</a>
                <a href="~/HTMLCSS/Listagem/listagem_sala.cshtml">Salas</a>
                <a href="~/HTMLCSS/Listagem/listagem_setores.cshtml">Setores</a>
            </div>
            <!--PESQUISA-->
            <button class="dropdown-btn">
                <span class="material-symbols-outlined">search</span>
                Pesquisa
                <span class="material-symbols-outlined">expand_more</span>
            </button>
            <!--PESQUISA OPCOES-->
            <div class="dropdown-container">
                <a href="#">Usuarios</a>
                <a href="#">Turmas</a>
                <a href="#">Salas</a>
            </div>
            <!--PROVAS-->
            <a href="#">
                <span class="material-symbols-outlined">quiz</span>
                Provas
            </a>
            <!--AREA DO USUARIO-->
            <a href="#">
                <span class="material-symbols-outlined">account_circle</span>
                Área do Usuario
            </a>
            <!--LOGOUT-->
            <a class="logoff" onclick="LogOff()">
                <span class="material-symbols-outlined">logout</span>
                Fazer Logoff
            </a>
        </div>
    </nav>
        <main>
            <div class="content">
                <form method="post" action="~/HTMLTEMP/Passagem/matriculando.cshtml">
                    <div class="container">
                        <center>
                            <div class="registro">
                                <!--ALUNO-->
                                <select name="idaluno" id="idaluno">
                                    <option value="1" disabled selected>ESCOLHA O ALUNO</option>
                                    @{List<pessoa> lista_alunos = Funcoes.Listagem_Alunos(); }
                                    @foreach (pessoa listagemalunos in lista_alunos)
                                    {
                                        <option value="@listagemalunos.cpf">@listagemalunos.nome</option>
                                    }
                                </select>
                                <!--TURMA-->
                                <select name="idturma" id="idturma">
                                    <option value="1" disabled selected>ESCOLHA A TURMA</option>
                                    @{List<turma> lista = Funcoes.Listagem_Turmas();}
                                    @foreach (turma turmas in lista)
                                    { 
                                        <option value="@turmas.idturma">@turmas.nome_curso</option>

                                    }
                                </select>
                                <!--ENVIAR-->
                                <input type="submit" placeholder="MATRICULAR" /><br />

                            </div>
                        </center>
                    </div>
                </form>
            </div>
        </main>
    </section>
    <script src="~/JS/Index.js"></script>
</body>
</html>
