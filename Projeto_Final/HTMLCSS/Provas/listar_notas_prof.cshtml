@using Projeto_Final.CSHARP
@{
    BancoDeDados.DBConnect();
    Boolean logado = false;
    HttpCookie cookie = Request.Cookies["UserLogin"];
    HttpCookie cookiecpf = Request.Cookies["UserCpf"];

    string usercpf = cookiecpf.Value.ToString();
    prova Prova = new prova();

    Prova.extrados = usercpf;

    if (cookie != null)
    {
        logado = true;
    }

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--FONTE-->
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet'>
    <!--ICONES-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20,300,1,-25" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!--css-->
    <link rel="stylesheet" href="~/HTMLCSS/CSS/sidebar.css" />
    <link rel="stylesheet" href="~/HTMLCSS/CSS/Listagem.css" />
    <title>CENAI</title>
</head>
<body div class="bg">
    <section>
        <nav>
            <!--SIDEBAR-->
            <div class="sidenav" onclick="Dropdownbtn()">
                <!--PAGINA INICIAL-->
                <a href="~/HTMLCSS/Main/main.cshtml">
                    <span class="material-symbols-outlined">home</span>
                    Pagina Inicial
                </a>
                <!--MATRICULA-->
                <button class="dropdown-btn">
                    <span class="material-symbols-outlined">person_add</span>
                    Matricula
                    <span class="material-symbols-outlined">expand_more</span>
                </button>
                <!--MATRICULA OPCOES-->
                <div class="dropdown-container">
                    <a href="~/HTMLCSS/Registro/matricula.cshtml">Fazer Matricula</a>
                    <a href="~/HTMLCSS/Listagem/listagem_matriculas.cshtml">Alunos Matriculados</a>
                </div>
                <!--REGISTRO-->
                <button class="dropdown-btn">
                    <span class="material-symbols-outlined">app_registration</span>
                    Registro
                    <span class="material-symbols-outlined">expand_more</span>
                </button>
                <!--REGISTRO OPCOES-->
                <div class="dropdown-container">
                    <a href="~/HTMLTEMP/Checagem/check_registro.cshtml">Usuarios</a>
                    <a href="~/HTMLCSS/Registro/registro_turma.cshtml">Turmas</a>
                    <a href="~/HTMLCSS/Registro/registro_sala_setor.cshtml">Salas/Setores</a>
                </div>
                <!--LISTAGEM-->
                <button class="dropdown-btn">
                    <span class="material-symbols-outlined">list_alt</span>
                    Listagem
                    <span class="material-symbols-outlined">expand_more</span>
                </button>
                <!--LISTAGEM OPCOES-->
                <div class="dropdown-container">
                    <a href="~/HTMLCSS/Listagem/Listagem_Alunos">Usuarios</a>
                    <a class="active" href="~/HTMLCSS/Listagem/listagem_turma.cshtml">Turmas</a>
                    <a href="~/HTMLCSS/Listagem/listagem_sala.cshtml">Salas</a>
                    <a href="~/HTMLCSS/Listagem/listagem_setores.cshtml">Setores</a>
                </div>
                <!--PESQUISA-->
                <button class="dropdown-btn">
                    <span class="material-symbols-outlined">search</span>
                    Pesquisa
                    <span class="material-symbols-outlined">expand_more</span>
                </button>
                <!--PESQUISA OPCOES-->
                <div class="dropdown-container">
                    <a href="#">Usuarios</a>
                    <a href="#">Turmas</a>
                    <a href="#">Salas</a>
                </div>
                <!--PROVAS-->
                <a href="#">
                    <span class="material-symbols-outlined">quiz</span>
                    Provas
                </a>
                <!--AREA DO USUARIO-->
                <a href="~/HTMLTEMP/Checagem/check_userarea.cshtml">
                    <span class="material-symbols-outlined">account_circle</span>
                    Área do Usuario
                </a>
                <!--LOGOUT-->
                <a class="logoff" onclick="LogOff()">
                    <span class="material-symbols-outlined">logout</span>
                    Fazer Logoff
                </a>
            </div>
        </nav>

        <div class="content" id="content">
            
            <div class="lista" id="lista">
                <center>
                    <table>
                        <tr>
                            <th>PROVA</th>
                            <th>NOTA</th>
                            <th>ALUNO</th>
                            <th>CURSO</th>
                            <th>TURMA</th>
                            <th>OPÇÕES</th>
                        </tr>
                        @{List<prova> lista = Funcoes.Lista_Notas(Prova);}
                        @foreach (prova provas in lista)
                        {
                        <tr>
                            <td>@provas.idprova</td>
                            <td>@provas.nota</td>
                            <td>@provas.idmatricula</td>
                            <td>@provas.idturma</td>
                            <td>@provas.extra</td>
                            <td><div class="options">
                                    <form method="post" action="~/HTMLCSS/Provas/edit_notas.cshtml">
                                        <input type="hidden" id="provaid" name="provaid" value="@provas.idprova" />
                                        <button class="btn_edit">
                                            <span class="glyphicon glyphicon-edit"></span> 
                                        </button>
                                    </form>
                                    <form method="post" action="~/HTMLCSS/Provas/delete_nota.cshtml">
                                        <input type="hidden" id="provaid" name="provaid" value="@provas.idprova" />
                                        <button class="btn_remove">
                                            <span class="glyphicon glyphicon-remove-circle"></span>
                                        </button>
                                    </form>
                                </div></td>
                        </tr>
                            
                        }
                    </table>
                    
                </center>
            </div>
        </div>
    </section>
    
    <script src="~/JS/Index.js">
    </script>
</body>
</html>
