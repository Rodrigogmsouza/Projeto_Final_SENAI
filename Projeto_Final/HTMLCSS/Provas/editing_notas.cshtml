@using Projeto_Final.CSHARP;
@{
    BancoDeDados.DBConnect();

    prova pva = new prova();

    pva.idprova = Request.Form["provaid"];
    string idprova = "";
    string nota = "";
    string matricula = "" ;

    List<prova> lista = Funcoes.Listing_Notas(pva);
    foreach (prova prova_atual in lista)
    {
        idprova = prova_atual.idprova;
        nota = prova_atual.nota;
        matricula = prova_atual.idmatricula;
    }

        prova Prova = new prova();

        Prova.idprova = Request.Form["provaid"];
        Prova.nota = Request.Form["notaid"];
        Prova.idmatricula = Request.Form["idmatricula"];
    
        if (Prova.nota == "")
        {
            Prova.nota = nota;
        }
        if (Prova.idmatricula == null)
        {
            Prova.idmatricula = matricula;
        }
        Funcoes.editnota(Prova);

        <text>
            <script>
                window.location.href = "/HTMLCSS/Provas/listar_notas_prof.cshtml";
            </script>
        </text>
    }